#!/bin/bash

Title="BC"
Home=(https://www.gnu.org/software/bc/)
Name=BC
Version=1.07.1
ToolDeps=(Flex Ed)
BuildDeps=(LibReadline)
Supplies=(https://ftpmirror.gnu.org/gnu/bc/bc-$Version.tar.gz)

Build()
{
    ./configure \
        --prefix=/usr           \
        --disable-nls           \
        --with-readline         \
        --mandir=/usr/share/man \
        --infodir=/usr/share/info

    make
    #echo "quit" | ./bc/bc -l Test/checklib.b
    make install
}
