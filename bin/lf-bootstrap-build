#!/bin/bash

source $(dirname $0)/lf-config

lf-bootstrap-setup

echo "lf-build $1" | \
    chroot "$LfsBootstrap/root" /usr/bin/env -i \
    HOME=$HOME                                  \
    TERM=$TERM                                  \
    PATH=$LifoTop/bin:/tools/bin:/bin:/usr/bin  \
    /bin/bash +h -i -s

unmount-all $LfsBootstrap

rsync --verbose --archive $LfsBootstrap/build/tools ~/lfs
rm --force --verbose --recursive $LfsBootstrap/build/tools
rm --force --verbose --recursive $LfsBootstrap/build/root/lfs/sources