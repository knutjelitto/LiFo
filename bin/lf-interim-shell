#!/bin/bash

source LifoConfig
Include lf-interim-config

trap Cleanup EXIT

Cleanup()
{
    unmount-all $LfsInterim
}

Cleanup

lf-interim-make-chroot

chroot $InterimChangeRoot /tools/bin/env -i \
    HOME=/root                  \
    TERM="$TERM"                \
    PS1='(interim chroot) \u:\w\$ ' \
    PATH=/bin:/usr/bin:/sbin:/usr/sbin:/tools/bin \
    /tools/bin/bash --login +h -s

