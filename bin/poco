if [[ "${1}" == "clean" ]]; then
    pogo core empty
elif [[ "${1}" == "shell" ]]; then
    pogo core shell
elif [[ "${2-}" == "done" ]]; then
    pogo core make "$1" 'done'
elif [[ "${2-}" == "break" ]]; then
    pogo core make "$1" 'break'
elif [[ "${2-}" == "new" ]]; then
    pogo core make "$1" 'new'
else
    pogo core make "$1"
fi
