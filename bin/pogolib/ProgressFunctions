#!/bin/bash -eu (source-only)

[[ -z ${_progressFunctionsIncluded:-} ]] || exit
_progressFunctionsIncluded=true

Progress_Device='/dev/tty'
Progress_Home=$'\r\e[K'
Progress_Prefix=''
Progress_Markers=(
    '[<=>.....]'
    '[.<=>....]'
    '[..<=>...]'
    '[...<=>..]'
    '[....<=>.]'
    '[.....<=>]'
    '[>.....<=]'
    '[=>.....<]'
)

ShowProgress ()
{
    local -i index=0
    while read; do
        echo -n $'\r'
        echo -n "${Progress_Prefix}" >$Progress_Device
        echo -n "${Progress_Markers[${index}]}" >$Progress_Device
        index=$(( (index + 1) % 8 ))
    done
}

ProgressStart ()
{
    Progress_Prefix="$1"
    echo -n "${Progress_Home}" >$Progress_Device
    echo -n "${Progress_Prefix}" >$Progress_Device
}

ProgressNext ()
{
    Progress_Prefix+="$1"
    echo -n "${Progress_Home}" >$Progress_Device
    echo -n "${Progress_Prefix}" >$Progress_Device
}

ProgressDone ()
{
    Progress_Prefix+="$1"
    echo -n "${Progress_Home}" >$Progress_Device
    echo "${Progress_Prefix}" >$Progress_Device
    Progress_Prefix=''
}

ProgressStart "FIND1"
find /usr | tee /tmp/xxx | ShowProgress
ProgressNext "-OK  "
ProgressNext "FIND2"
find /usr | tee /tmp/xxx | ShowProgress
ProgressDone "-OK"
