#!/bin/bash -eu

Import PogoConfig
NeverInChroot

rm $verbose --force --recursive $Tools_Root
rm $verbose --force --recursive $Tools_Build

upto="$1"

for recipe in {607..640}; do
    if [[ "$recipe" == "$upto" ]]; then
        pogo tools build $recipe
        pogo tools harvest $recipe
        exit
    else
        pogo tools rollout $recipe
    fi
done
